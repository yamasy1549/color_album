<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-content masonry-container">
      <%= image_tag(@design.image.url, class: 'image mas-box') %>

      <div class="info mas-box">
        <h2 class="title"><%= @design.title %></h2>
        <p><%= @design.memo %></p>
        <ul class="custom-tags">
          <% @design.custom_tag_list.each do |tag| %>
            <li><%= link_to tag, search_path(tag_search: tag), class: 'tag' %></li>
          <% end %>
        </ul>

        <div class="icons">
          <%= edit_icon(edit_design_path(@design)) %>
          <%= destroy_icon(@design) %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id='modal-back'></div>
