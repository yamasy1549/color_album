<div class="modal-dialog">
  <div class="modal-content">
    <%= form_for(@design, remote: true) do |f| %>

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <% if @design.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@design.errors.count, "error") %> prohibited this design from being saved:</h2>

          <ul>
            <% @design.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <ul class="forms">
        <li>
          <p><%= f.label :title %></p>
          <%= f.text_field :title %>
        </li>
        <li>
          <p><%= f.label :image %></p>
          <%= image_tag(@design.image.url(:thumbnail)) %>
          <%= f.file_field :image %>
        </li>
        <li>
          <p><%= f.label :memo %></p>
          <%= f.text_area :memo %>
        </li>
        <li>
          <%= f.label :tag_list, "tags" %><br>
          <%= text_field_tag 'design[custom_tag_list]', @design.custom_tag_list.join(',') %>
        </li>
      </ul>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>

<div id='modal-back'></div>
